#!/bin/bash

BRANCH=`git rev-parse --abbrev-ref HEAD`
PROTECTED_BRANCHES="^(main)"

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]] 
then
    echo "ğŸš« push to main is prevented"
    exit 1
fi

# echo "ğŸŒ Running translation check..."
# pnpm check-translations

# echo "ğŸ” Cleaning Next.js build..."
# pnpm -r clean:nextjs

echo "ğŸ” Running type check..."
pnpm -r typecheck

if [ $? -ne 0 ]; then
    echo "Type check failed, push prevented"
    exit 1
fi

echo "âœ… Build successful, proceeding with push"